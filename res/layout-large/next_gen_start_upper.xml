<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/next_gen_startup_layout"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="left"
        android:weightSum="2">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="3">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    android:layout_above="@+id/next_gen_startup_play_button"
                    android:src="@drawable/man_of_sett_top_logo"/>
                <ImageButton
                    android:id="@+id/next_gen_startup_play_button"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:scaleType="fitCenter"
                    android:layout_centerInParent="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/front_page_paly_button"/>
                <ImageButton
                    android:id="@+id/next_gen_startup_extra_button"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_below="@+id/next_gen_startup_play_button"
                    android:layout_centerInParent="true"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:src="@drawable/front_page_extra_button"/>

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>