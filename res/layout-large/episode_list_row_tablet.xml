<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/episode_loading"
	    android:layout_alignParentTop="true"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	    <ProgressBar
	        android:layout_width="@dimen/tds_loading_width"
	        android:layout_height="@dimen/tds_loading_width"
	        android:layout_centerInParent="true"
			android:visibility="visible"/>

	</RelativeLayout>
	<LinearLayout 
    	android:background="@color/whitegray"
    	android:paddingLeft="@dimen/spacing_large"
    	android:paddingRight="@dimen/spacing_large"
		android:layout_alignParentTop="true"
	    android:id="@+id/episode_contents"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:paddingTop="@dimen/spacing_small"
	    android:paddingBottom="@dimen/spacing_small">
	    <TextView 
	        android:id="@+id/episode_text_number"
	        android:layout_weight="1"
	        android:gravity="right"
	        android:textColor="@color/grey05"
	        android:textSize="@dimen/textMedium"
	        android:text="22."
	        android:paddingRight="5dp"
	        android:layout_height="match_parent"
	        android:layout_width="0dp"/>
		<LinearLayout
		    android:layout_weight="14"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:orientation="vertical">
		    <RelativeLayout 
			    android:id="@+id/episode_content"
		        android:layout_width="fill_parent"
		    	android:layout_height="wrap_content">
			    <TextView 
			        android:id="@+id/episode_text_name"
			        android:layout_alignParentLeft="true"
			        android:layout_alignParentTop="true"
			        android:layout_centerVertical="true"
			        android:textColor="@android:color/black"
			        android:textSize="@dimen/textMedium"
			        android:text="Name of Episode"
			        android:layout_height="wrap_content"
			        android:layout_width="wrap_content"
			        android:paddingBottom="@dimen/spacing_small"/>
			    <TextView 
			        android:id="@+id/episode_text_synopsis"
			        android:layout_below="@+id/episode_text_name"
			        android:layout_alignParentLeft="true"
			        android:layout_centerVertical="true"
			        android:textColor="@android:color/darker_gray"
			        android:textSize="@dimen/textSmall"
			        android:text="Season 2 Premiere. Tyrion arrives to save Joffrey's crown from threats old and new; Daenerys searches for allies and water in the Red Waste; Jon Snow and the Night's Watch face the wilderness beyond"
			        android:layout_height="wrap_content"
			        android:layout_width="wrap_content"/>
			
		    </RelativeLayout>
		    
		    <RelativeLayout 
				android:id="@+id/episode_watch_download_btn_layout"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/spacing_large"
				android:layout_marginBottom="@dimen/spacing_large">
		        
		        <Button
			        android:id="@+id/episode_watch_btn"
			        android:layout_width="wrap_content"
			        android:layout_height="@dimen/tds_watch_height"
			        android:minWidth="@dimen/tds_watch_width"
			        android:layout_alignParentRight="true"
			        android:background="@drawable/watchnow_background"
			        android:clickable="true"
			        android:focusable="true"
			        android:scaleType="fitCenter"
			    	android:drawableLeft="@drawable/icon_play"
			    	android:drawablePadding="@dimen/iconpanel_padding_drawable"
					android:padding="@dimen/iconpanel_padding_bottom"
					android:paddingRight="20dp"
			    	android:gravity="center"
			        android:text="Watch"
			        android:textColor="@color/tds_watch_btn_text_color"
			        android:textSize="@dimen/textMSmall" />
			    
			    <include layout="@layout/download_panel_episode_row"
			        android:id="@+id/episode_download_panel"
				    android:layout_width="wrap_content"
				    android:layout_height="@dimen/tds_watch_height"
				    android:orientation="vertical"/>
		        
		    </RelativeLayout>
		</LinearLayout>
	</LinearLayout>
	<Button 
        android:layout_width="0dp"
        android:layout_height="0dp"
	    />
	<LinearLayout 
        android:layout_below="@id/episode_contents"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/whitegray">
    <LinearLayout 
    	android:layout_marginLeft="@dimen/spacing_large"
    	android:layout_marginRight="@dimen/spacing_large"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout>
