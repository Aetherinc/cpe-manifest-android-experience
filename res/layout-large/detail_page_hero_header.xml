<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical" >
		<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
		    android:layout_marginTop="@dimen/spacing_large"
		    android:layout_marginLeft="@dimen/spacing_large"
		    android:layout_marginRight="@dimen/spacing_large"
			android:orientation="vertical">
			
			<LinearLayout
				android:id="@+id/movieDetails"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/spacing_large"
				android:weightSum="3"
				android:orientation="horizontal" >

			    <RelativeLayout
			        android:id="@+id/moviedetails_poster_layout"
			        android:layout_width="@dimen/movie_pro_width_tablet"
			        android:layout_height="wrap_content" >
			        
					<ImageView
						android:id="@+id/moviedetails_poster"
						android:layout_alignParentTop="true"
						android:layout_width="@dimen/movie_pro_width_tablet"
						android:layout_height="@dimen/movie_pro_height_tablet"
						android:layout_marginRight="@dimen/spacing_large"
						android:adjustViewBounds="true"
						android:scaleType="fitXY"
						android:src="@drawable/poster_loading_small"
						android:visibility="visible" />
					
															
				</RelativeLayout>
				 
			    <LinearLayout
			        android:layout_width="fill_parent"
					android:layout_height="wrap_content"
			        android:orientation="vertical" >
			        
					<include layout="@layout/metadata_panel"
						android:layout_marginLeft="@dimen/spacing_normal"
						android:layout_marginRight="@dimen/spacing_normal"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:id="@+id/moviedetails_metadata_bar"/>
				    
					
			   
					<RelativeLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content">
		
							    
						<TextView
							android:id="@+id/moviedetails_synopsis"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:maxLines="8"
							android:ellipsize="end"
							android:autoLink="all"
							android:text="Synopsis"
							android:textAppearance="@style/TextSmall" />
						<TextView
							android:id="@+id/moviedetails_synopsis_more"
							android:layout_below="@id/moviedetails_synopsis"
							android:layout_alignParentRight="true"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:singleLine="true"
							android:textColor="@android:color/holo_blue_dark"
							android:text="more"
							android:textAppearance="@style/TextSmall" 
							android:visibility="gone"/>
		
					</RelativeLayout>	
				</LinearLayout>
			</LinearLayout>

			<Button 
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:text="ButtonToFixGridViewHeaderSelectable" />
		    <RelativeLayout
		        android:id="@+id/audio_subtitle_select_panel"
			    android:paddingLeft="@dimen/spacing_large"
			    android:paddingRight="@dimen/spacing_large"
		        android:paddingBottom="@dimen/spacing_large"
		        android:paddingTop="@dimen/spacing_large"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/bgpanel_active_topdiv"
		        android:clickable="true"
		        android:gravity="center_vertical"
		        android:minHeight="50dp"
		        android:orientation="horizontal"
		        android:visibility="visible" >

		        <TextView
		            android:id="@+id/audio_subtitle_label"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/audio_subtitle"
		            android:textAppearance="@style/TextSmallBold"
		            android:textColor="@color/flixster_default_text_color" />

		        <LinearLayout
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentRight="true"
		            android:gravity="right" >

		            <TextView
		                android:id="@+id/audio_subtitle_value"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:paddingRight="@dimen/spacing_small"
		                android:textAppearance="@style/TextSmall"
		                android:textColor="@color/grey05" />

		            <ImageView
		                android:layout_width="14dp"
		                android:layout_height="14dp"
		                android:layout_gravity="center_vertical"
		                android:adjustViewBounds="true"
		                android:scaleType="fitCenter"
		                android:src="@drawable/icon_arrow_right" />
		        </LinearLayout>
		    </RelativeLayout>

		</LinearLayout>
		<RadioGroup
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/ECEpisodeSwitchRadioGroup"
			android:gravity="center_horizontal"
	        android:orientation="horizontal"
	        android:padding="8dp"
	        android:visibility="gone"
	        android:checkedButton="@+id/sound" >

	        <RadioButton
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:button="@android:color/transparent"
	            android:background="@drawable/radio_tab_button_left"
	            android:id="@+id/episodesRadioButton"
	            android:checked="true"
	            android:padding="8dp"
	            android:gravity="center_horizontal"
	            android:layout_weight="1"
				android:textAppearance="@style/TextMedium"/>
	
	        <RadioButton
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:button="@android:color/transparent"
	            android:background="@drawable/radio_tab_button_right"
	            android:id="@+id/ecRadioButton"
	            android:padding="8dp"
	            android:gravity="center_horizontal"
	            android:layout_weight="1"
				android:textAppearance="@style/TextMedium"/>

    	</RadioGroup>
		<include 
		    android:id="@+id/rating_panel"
		    layout="@layout/rating_layout"/>
    	
</LinearLayout>