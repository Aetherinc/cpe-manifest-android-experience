    <LinearLayout
		android:layout_width="500dp"
		android:layout_height="fill_parent"  
		android:layout_above="@+id/landingpage_footers"
		android:layout_below="@id/flixster_logo_layout"
		android:layout_centerHorizontal="true"
		android:weightSum="7"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
		android:orientation="vertical" >
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="3"
			android:orientation="vertical"
			android:gravity="center_horizontal|bottom">
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="4dp"
				android:paddingRight="4dp"
				android:paddingTop="10dp"
				android:paddingBottom="10dp"
				android:layout_gravity="center_horizontal" >
				<Button
					android:id="@+id/button_start"
					android:background="@drawable/flixster_blue_button"
					android:textColor="@color/white"
					android:paddingTop="10dp"
					android:paddingBottom="10dp"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textStyle="bold"
					android:textSize="@dimen/textMedium"
					android:text="@string/redeem_redeemBtn"/>
			</LinearLayout>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="4dp"
				android:paddingRight="4dp"
				android:paddingTop="10dp"
				android:paddingBottom="10dp"
				android:gravity="bottom"
				android:layout_gravity="center_horizontal"
				android:orientation="horizontal" >

				<Button
					android:id="@+id/button_register"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="6"
					android:background="@drawable/flixster_drawer_button_white"
					android:textColor="@color/flixster_video_blue"
					android:clickable="true"
					android:focusable="true"
					android:scaleType="fitCenter"
					android:text="@string/label_reg"
					android:textStyle="bold"
					android:textSize="@dimen/textMedium" />

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="0.6" />

				<Button
					android:id="@+id/button_sign_in"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="6"
					android:background="@drawable/flixster_drawer_button_white"
					android:textColor="@color/flixster_video_blue"
					android:clickable="true"
					android:focusable="true"
					android:scaleType="fitCenter"
					android:text="Login"
					android:textStyle="bold"
					android:textSize="@dimen/textMedium" />

			</LinearLayout>
		</LinearLayout>
        <LinearLayout
   		    android:layout_width="match_parent"
   		    android:layout_height="wrap_content"
			android:paddingLeft="4dp"
			android:paddingRight="4dp"
			android:paddingTop="3dp"
			android:paddingBottom="3dp"
   		    android:gravity="center|center_vertical"
   		    android:orientation="horizontal" >

   		    <ImageView 
				android:layout_width="0dp"
				android:layout_weight="5"
				android:layout_height="2px"
				android:background="@drawable/table_header_divider" />
   		    
			<TextView
			    android:id="@+id/redeem_login_or"
				android:layout_width="0dp"
				android:layout_weight="2"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:text="or"
				android:textColor="@color/flixster_text_grey"
			    android:textSize="@dimen/textSmall"
			    android:background="@android:color/transparent" />

   		    <ImageView 
				android:layout_width="0dp"
				android:layout_weight="5"
				android:layout_height="2px"
				android:background="@drawable/table_header_divider" />
		
		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="3"
			android:paddingLeft="4dp"
			android:paddingRight="4dp"
			android:paddingTop="10dp"
			android:paddingBottom="10dp"
			android:gravity="center_horizontal|top"
			android:orientation="horizontal" >
    		<Button
				android:id="@+id/button_fb_login"
				android:layout_width="0dp"
				android:layout_weight="6"
				android:layout_height="wrap_content"
				android:background="@drawable/flixster_login_page_button"
				android:clickable="true"
				android:focusable="true"
				android:scaleType="fitCenter"
				android:text="@string/label_facebook_login2"
				android:textColor="@color/flixster_login_page_button_text_color"
	    		android:drawableLeft="@drawable/fblogo"
				android:textStyle="bold"
				android:textSize="@dimen/textMedium" />
    		
    		<LinearLayout
    		    android:layout_width="wrap_content"
    		    android:layout_height="wrap_content"
    		    android:layout_weight="0.6" />
    		
    		<Button
				android:id="@+id/google_sign_in_button"
				android:layout_width="0dp"
				android:layout_weight="6"
				android:layout_height="wrap_content"
				android:background="@drawable/flixster_login_page_button"
				android:clickable="true"
				android:focusable="true"
				android:scaleType="fitCenter"
				android:text="@string/label_google"
				android:textColor="@color/flixster_login_page_button_text_color"
	    		android:drawableLeft="@drawable/icon_gplus_red"
				android:textStyle="bold"
				android:textSize="@dimen/textMedium" />
    		
   		</LinearLayout>

    </LinearLayout>
   	<LinearLayout 
		android:id="@+id/landingpage_footers"
		android:layout_alignParentBottom="true"
		android:background="#e8e8e8"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">	
		<net.flixster.android.view.widget.LinkEnabledTextView
			android:id="@+id/linked_legal_links"
			android:paddingTop="10dp"
			android:paddingLeft="20dp"
			android:paddingRight="20dp"
			android:gravity="center"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:clickable="true"
			android:focusable="true"
			android:layout_gravity="center_horizontal"
			android:textSize="@dimen/textSmall" />
   		
   		<TextView
		    android:id="@+id/version_number"
		    android:layout_width="match_parent"
		    android:layout_height="0dp"
		    android:focusable="true"
			android:layout_weight="1"
		    android:gravity="right|bottom"
		    android:text="v2.0"
		    android:textColor="@color/flixster_login_page_button_text_color"
		    android:textSize="@dimen/textSmall" />
    </LinearLayout>
</RelativeLayout>