<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"><!-- pressed -->
	    <shape android:shape="rectangle">
		    <solid
		        android:color="@color/flixster_fb_connect_color" />
		   
		    <padding android:left="7dp"
		        android:top="7dp"
		        android:right="7dp"
		        android:bottom="7dp" />
		    <corners android:radius="8dp" />
		</shape> 
    </item>
    
    <item > <!-- default -->
        
        <layer-list>
    	    <item android:left="1dp" 
    	        android:right="10dp"
		        android:gravity="left" >
		        <shape android:shape="rectangle">
					<solid
				        android:color="@color/flixster_fb_connect_color" />
					<size
        				android:width="6dp"/>
				   <!--  <padding android:left="7dp"
				        android:top="7dp"
				        android:right="7dp"
				        android:bottom="7dp" /> -->
				    <corners android:radius="8dp"/>
				</shape> 
		        
		   	</item>
    	    <item android:left="38dp" 
		        android:gravity="left" >
		        <shape android:shape="rectangle">
		            <solid android:color="#ffffff" />
					<size android:width="1dp" />
					
				   <!--  <padding android:left="7dp"
				        android:top="7dp"
				        android:right="7dp"
				        android:bottom="7dp" /> -->
				</shape> 
		        
		   	</item>
		   
    	     <item android:left="40dp" 
		        android:gravity="right" >
		        <shape android:shape="rectangle">
					<solid
				        android:color="@color/flixster_fb_connect_color" />
				   <!--  <padding android:left="7dp"
				        android:top="7dp"
				        android:right="7dp"
				        android:bottom="7dp" /> -->
				    <corners android:topRightRadius="8dp"
				        android:bottomLeftRadius="8dp"  />
				    
					  <size android:width="4dp" />
				</shape> 
		        
		   </item>
		   
		    
		</layer-list>
    </item>
    
</selector>