<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="@color/fb_button_base" android:startColor="@color/fb_button_highlight" />

            <stroke android:width="3dp" android:color="@color/fb_button_border" />

            <corners android:radius="3dp" />

            <padding android:bottom="12dp" android:left="10dp" android:right="10dp" android:top="12dp" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:angle="270" android:endColor="@color/fb_button_base" android:startColor="@color/fb_button_highlight" />

            <stroke android:width="3dp" android:color="@color/fb_button_border" />

            <corners android:radius="3dp" />

            <padding android:bottom="12dp" android:left="10dp" android:right="10dp" android:top="12dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="@color/fb_button_base" android:startColor="@color/fb_button_highlight" />

            <stroke android:width="1dp" android:color="@color/fb_button_border" />

            <corners android:radius="3dp" />

            <padding android:bottom="12dp" android:left="10dp" android:right="10dp" android:top="12dp" />
        </shape></item>

</selector>