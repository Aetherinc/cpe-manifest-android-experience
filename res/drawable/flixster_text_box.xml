<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
		<shape android:shape="rectangle">
		     <gradient
		        android:startColor="#b8b8b8"
        		android:centerY="0.25"
		        android:endColor="@color/white"
		        android:angle="270"/>
		    <padding android:left="7dp"
		        android:top="7dp"
		        android:right="7dp"
		        android:bottom="7dp" />
		    <stroke
		        android:width="2dp"
		        android:color="@color/flixster_textbox_selected_stroke"/>
		    <corners android:radius="8dp" />
		</shape> 	
	</item>	
	<item>
		<shape android:shape="rectangle">
		     <gradient
		        android:startColor="#b8b8b8"
		        android:centerColor="@color/white"
        		android:centerY="0.25"
		        android:endColor="@color/white"
		        android:angle="270"/>
		    <padding android:left="7dp"
		        android:top="7dp"
		        android:right="7dp"
		        android:bottom="7dp" />
		    <stroke
		        android:width="2dp"
		        android:color="@color/flixster_textbox_deselected_stroke" />
		    <corners android:radius="8dp" />
		</shape> 	
	</item>	
</selector>