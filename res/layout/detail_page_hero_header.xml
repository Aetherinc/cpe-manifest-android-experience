<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical" >    
	<include layout="@layout/metadata_panel"
			android:layout_marginLeft="@dimen/spacing_xlarge"
			android:layout_marginRight="@dimen/spacing_xlarge"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/moviedetails_metadata_bar"/>
		<LinearLayout
			android:id="@+id/movieDetails"
		    android:layout_marginTop="@dimen/spacing_normal"
		    android:layout_marginLeft="@dimen/spacing_xlarge"
		    android:layout_marginRight="@dimen/spacing_xlarge"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/spacing_normal"
			android:weightSum="3"
			android:orientation="horizontal" >
		        
			<ImageView
				android:id="@+id/moviedetails_poster"
				android:layout_width="@dimen/movie_pro_width"
				android:layout_height="@dimen/movie_pro_height"
				android:adjustViewBounds="true"
				android:scaleType="fitStart"
				android:layout_marginRight="@dimen/spacing_normal"
				android:src="@drawable/poster_loading_small"
				android:visibility="visible" />
								
			<RelativeLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">

					    
				<TextView
					android:id="@+id/moviedetails_synopsis"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:maxLines="8"
					android:ellipsize="end"
					android:autoLink="all"
					android:text="Synopsis"
					android:textAppearance="@style/TextSmall" />
				<TextView
					android:id="@+id/moviedetails_synopsis_more"
					android:layout_below="@id/moviedetails_synopsis"
					android:layout_alignParentRight="true"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:singleLine="true"
					android:textColor="@android:color/holo_blue_dark"
					android:text="more"
					android:textAppearance="@style/TextSmall" 
					android:visibility="gone"/>

			</RelativeLayout>
		</LinearLayout>
		
		
		<LinearLayout
			android:id="@+id/SubCapLinearLayout"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical" >

		    <RelativeLayout
		        android:id="@+id/audio_subtitle_select_panel"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/bgpanel_active_topdiv"
		        android:gravity="center_vertical"
		        android:clickable="true"
		        android:orientation="horizontal"
		        android:paddingTop="@dimen/spacing_normal"
		        android:paddingBottom="@dimen/spacing_normal"
		        android:visibility="visible" >

		        <TextView
		            android:id="@+id/audio_subtitle_label"
					android:paddingLeft="@dimen/spacing_xlarge"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/audio_subtitle"
				    android:textColor="@color/flixster_default_text_color"
		            android:textAppearance="@style/TextSmallBold" />

		        <LinearLayout
		            android:layout_alignParentRight="true"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:gravity="right" >
		       		<TextView
		       		    android:id="@+id/audio_subtitle_value"
		       		    android:layout_width="wrap_content"
		       		    android:layout_height="wrap_content"
		       		    android:paddingRight="@dimen/spacing_small"
		       		    android:textAppearance="@style/TextSmall"
		       		    android:textColor="@color/grey05"
		       		    android:text=""/>
		       		<ImageView
		       		    android:layout_width="14dp"
		       		    android:layout_height="14dp"
						android:paddingRight="@dimen/spacing_xlarge"
		       		    android:layout_gravity="center_vertical"
		       		    android:scaleType="fitCenter"
		       		    android:src="@drawable/icon_arrow_right"
		       		    android:adjustViewBounds="true" />
	       		</LinearLayout>
		        
		    </RelativeLayout>
		    
		</LinearLayout>
		
		
		<RadioGroup
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/ECEpisodeSwitchRadioGroup"
			android:gravity="center_horizontal"
	        android:orientation="horizontal"
	        android:padding="8dp"
	        android:visibility="gone"
	        android:checkedButton="@+id/sound" >

	        <RadioButton
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:button="@android:color/transparent"
	            android:background="@drawable/radio_tab_button_left"
	            android:id="@+id/episodesRadioButton"
	            android:checked="true"
	            android:padding="8dp"
	            android:gravity="center_horizontal"
	            android:layout_weight="1"
				android:textAppearance="@style/TextSmall"/>
	
	        <RadioButton
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:button="@android:color/transparent"
	            android:background="@drawable/radio_tab_button_right"
	            android:id="@+id/ecRadioButton"
	            android:padding="8dp"
	            android:gravity="center_horizontal"
	            android:layout_weight="1"
				android:textAppearance="@style/TextSmall"/>

    	</RadioGroup>
		<include 
		    android:id="@+id/rating_panel"
		    layout="@layout/rating_layout"/>
		<Button
			android:layout_width="0dp"
			android:layout_height="0dp"></Button>
    	
</LinearLayout>