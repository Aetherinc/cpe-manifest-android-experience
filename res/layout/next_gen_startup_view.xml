<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:nextgen="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.wb.nextgen.widget.FixedAspectRatioFrameLayout
        xmlns:nextgen="http://schemas.android.com/apk/res-auto"
        nextgen:aspectRatioHeight="9"
        nextgen:aspectRatioWidth="16"
        android:layout_centerInParent="true"
        nextgen:priority="HEIGHT_PRIORITY"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        nextgen:allowLargerThanParent="true">
        <ImageView
            android:id="@+id/startup_image_view"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" />
        <VideoView
            android:id="@+id/startup_video_view"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </com.wb.nextgen.widget.FixedAspectRatioFrameLayout>

    <RelativeLayout
        android:id="@+id/startup_buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left">
        <com.wb.nextgen.widget.SelectedMaskImageButton
            android:id="@+id/next_gen_startup_play_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cast_ic_notification_on"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY"
            nextgen:selectedOverlayColor="@color/transparent_black"
            android:background="@android:color/transparent" />
        <com.wb.nextgen.widget.SelectedMaskImageButton
            android:id="@+id/next_gen_startup_extra_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cast_ic_notification_on"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY"
            nextgen:selectedOverlayColor="@color/transparent_black"
            android:background="@android:color/transparent"/>
    </RelativeLayout>


</RelativeLayout>