<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:nextgen="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <com.wb.nextgen.widget.FixedAspectRatioFrameLayout
        nextgen:aspectRatioWidth="16"
        nextgen:aspectRatioHeight="9"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">

    <!--     <VideoView
            android:id="@+id/surface_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true" /> -->
        <net.flixster.android.drm.ObservableVideoView
            android:id="@+id/surface_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true" />

    </com.wb.nextgen.widget.FixedAspectRatioFrameLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/next_gen_ime_bottom_view">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/next_gen_ime_main_frame">
            <ImageView
                android:id="@+id/ime_background_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:id="@+id/next_gen_ime_left_frame"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <!--<fragment android:name="com.wb.nextgen.fragment.NextGenIMEActorFragment"
                        android:id="@+id/ime_actor_fragment"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />-->
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/next_gen_ime_right_frame"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <!--<fragment
                        android:id="@+id/ime_grid_fragment"
                        android:name="com.wb.nextgen.fragment.IMEElementsGridFragment"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"/>-->

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>
</LinearLayout>