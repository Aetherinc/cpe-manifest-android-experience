<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:nextgen="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <com.wb.nextgen.widget.FixedAspectRatioFrameLayout
        nextgen:aspectRatioWidth="16"
        nextgen:aspectRatioHeight="9"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">
        <RelativeLayout
            android:id="@+id/video_view_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.wb.nextgen.videoview.ObservableVideoView
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/surface_view"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true" />
        </RelativeLayout>
    </com.wb.nextgen.widget.FixedAspectRatioFrameLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/next_gen_ime_bottom_view">

        <ImageView
            android:id="@+id/ime_background_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

</LinearLayout>