<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/flixster_menubar_bg"
    android:orientation="horizontal" 
    android:paddingTop="@dimen/spacing_large"
    android:paddingBottom="@dimen/spacing_large"
    android:id="@+id/maintab_image_logo">
    

	    <Button 
	    	android:layout_gravity="center_vertical"
	    	android:layout_alignParentLeft="true"
	        android:id="@+id/title_detail_back_btn"
	        android:layout_width="wrap_content"
	        android:layout_height="@dimen/collection_item_icon_width"
	    	android:text="My Collection"
	        android:drawableLeft="@drawable/icon_left_arrow_white"
	        android:scaleType="fitCenter"
	        android:background="@drawable/back_button_drawable"
	    	android:textSize="@dimen/header_bar_text_size"
	    	android:textStyle="bold"
	    	android:textColor="@color/white"
	        android:focusable="false"/>
		<android.support.v7.app.MediaRouteButton
	    	android:layout_alignParentRight="true"
		    android:id="@+id/detail_cast"
		    android:layout_width="wrap_content"
	        android:layout_height="@dimen/collection_item_icon_width"
	    	android:layout_gravity="center_vertical"
		    android:background="@android:color/transparent" />
</RelativeLayout>
