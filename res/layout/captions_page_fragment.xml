<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/captions_example_window"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_margin="@dimen/spacing_small"
            android:background="#404040"
            android:gravity="bottom"
            android:padding="@dimen/spacing_small" >

            <!--
		    <ImageView
		        android:id="@+id/captions_example_bg"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:layout_centerInParent="true"
		        android:scaleType="centerCrop"
		        android:src="@drawable/ab_flixsterlogo" />
            -->

            <com.flixster.android.captioning.CaptionView
                android:id="@+id/captions_example_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/spacing_large"
                android:background="#000000"
                android:gravity="center_horizontal"
                android:text="@string/caption_example_text_english"
                android:textColor="#FFFFFF" />
        </RelativeLayout>

        <ScrollView
            android:id="@+id/captions_scroll_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/captions_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <net.flixster.android.view.SubHeader
                    android:id="@+id/captions_font_header"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/caption_font_header" />

                <TextView
                    android:id="@+id/captions_font"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_pressed_holo"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/spacing_normal"
                    android:text=""
                    android:textAppearance="@style/TextMedium" />

                <net.flixster.android.view.SubHeader
                    android:id="@+id/captions_size_header"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/caption_size_header" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_small"
                    android:layout_marginRight="@dimen/spacing_small"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/captions_size_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/spacing_small"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingBottom="@dimen/spacing_small"
                        android:paddingLeft="@dimen/spacing_small"
                        android:paddingRight="@dimen/spacing_small"
                        android:paddingTop="@dimen/spacing_large"
                        android:text="@string/caption_size_small"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/captions_size_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/spacing_small"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingBottom="@dimen/spacing_small"
                        android:paddingLeft="@dimen/spacing_small"
                        android:paddingRight="@dimen/spacing_small"
                        android:paddingTop="@dimen/spacing_normal"
                        android:text="@string/caption_size_medium"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/captions_size_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/spacing_small"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingBottom="@dimen/spacing_small"
                        android:paddingLeft="@dimen/spacing_small"
                        android:paddingRight="@dimen/spacing_small"
                        android:paddingTop="@dimen/spacing_small"
                        android:text="@string/caption_size_large"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/captions_size_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/spacing_small"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingBottom="@dimen/spacing_small"
                        android:paddingLeft="@dimen/spacing_small"
                        android:paddingRight="@dimen/spacing_small"
                        android:text="@string/caption_size_huge"
                        android:textSize="25sp" />
                </LinearLayout>

                <net.flixster.android.view.SubHeader
                    android:id="@+id/captions_style_header"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/caption_style_header" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="@dimen/spacing_small"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/captions_style_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="#000000"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text="@string/caption_button_text"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/captions_style_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="#000000"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text="@string/caption_button_text"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/captions_style_italic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="#000000"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text="@string/caption_button_text"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/captions_style_underline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="#000000"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text="@string/caption_button_text"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />
                </LinearLayout>

                <net.flixster.android.view.SubHeader
                    android:id="@+id/captions_edge_header"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/caption_edge_header" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="@dimen/spacing_small"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/captions_edge_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="#C0C0C0"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text="@string/caption_button_text"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/captions_edge_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="#C0C0C0"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:shadowColor="#C0000000"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="3"
                        android:text="@string/caption_button_text"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/captions_edge_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="#C0C0C0"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:shadowColor="#000000"
                        android:shadowDx="0"
                        android:shadowDy="2"
                        android:shadowRadius=".01"
                        android:text="@string/caption_button_text"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/captions_edge_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="#C0C0C0"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:shadowColor="#000000"
                        android:shadowDx="0"
                        android:shadowDy="-2"
                        android:shadowRadius=".01"
                        android:text="@string/caption_button_text"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                    <net.flixster.android.model.EdgeTextView
                        android:id="@+id/captions_edge_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="#C0C0C0"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text="@string/caption_button_text"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />
                </LinearLayout>

                <net.flixster.android.view.SubHeader
                    android:id="@+id/captions_text_color_header"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/caption_text_color_header" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="@dimen/spacing_small"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/captions_text_color_white"
                        android:layout_width="@dimen/color_button_width"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingTop="@dimen/spacing_large"
                        android:src="@drawable/cc_white" />

                    <ImageView
                        android:id="@+id/captions_text_color_black"
                        android:layout_width="@dimen/color_button_width"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingTop="@dimen/spacing_large"
                        android:src="@drawable/cc_black" />

                    <ImageView
                        android:id="@+id/captions_text_color_red"
                        android:layout_width="@dimen/color_button_width"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingTop="@dimen/spacing_large"
                        android:src="@drawable/cc_red" />

                    <ImageView
                        android:id="@+id/captions_text_color_magenta"
                        android:layout_width="@dimen/color_button_width"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingTop="@dimen/spacing_large"
                        android:src="@drawable/cc_magenta" />

                    <ImageView
                        android:id="@+id/captions_text_color_yellow"
                        android:layout_width="@dimen/color_button_width"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingTop="@dimen/spacing_large"
                        android:src="@drawable/cc_yellow" />

                    <ImageView
                        android:id="@+id/captions_text_color_green"
                        android:layout_width="@dimen/color_button_width"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingTop="@dimen/spacing_large"
                        android:src="@drawable/cc_green" />

                    <ImageView
                        android:id="@+id/captions_text_color_cyan"
                        android:layout_width="@dimen/color_button_width"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingTop="@dimen/spacing_large"
                        android:src="@drawable/cc_cyan" />

                    <ImageView
                        android:id="@+id/captions_text_color_blue"
                        android:layout_width="@dimen/color_button_width"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingTop="@dimen/spacing_large"
                        android:src="@drawable/cc_blue" />
                </LinearLayout>

                <net.flixster.android.view.SubHeader
                    android:id="@+id/captions_bg_color_header"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/caption_bg_color_header" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="@dimen/spacing_small"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/captions_bg_color_white"
                        android:layout_width="@dimen/color_button_width"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingTop="@dimen/spacing_large"
                        android:src="@drawable/cc_white" />

                    <ImageView
                        android:id="@+id/captions_bg_color_black"
                        android:layout_width="@dimen/color_button_width"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingTop="@dimen/spacing_large"
                        android:src="@drawable/cc_black" />

                    <ImageView
                        android:id="@+id/captions_bg_color_red"
                        android:layout_width="@dimen/color_button_width"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingTop="@dimen/spacing_large"
                        android:src="@drawable/cc_red" />

                    <ImageView
                        android:id="@+id/captions_bg_color_magenta"
                        android:layout_width="@dimen/color_button_width"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingTop="@dimen/spacing_large"
                        android:src="@drawable/cc_magenta" />

                    <ImageView
                        android:id="@+id/captions_bg_color_yellow"
                        android:layout_width="@dimen/color_button_width"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingTop="@dimen/spacing_large"
                        android:src="@drawable/cc_yellow" />

                    <ImageView
                        android:id="@+id/captions_bg_color_green"
                        android:layout_width="@dimen/color_button_width"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingTop="@dimen/spacing_large"
                        android:src="@drawable/cc_green" />

                    <ImageView
                        android:id="@+id/captions_bg_color_cyan"
                        android:layout_width="@dimen/color_button_width"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingTop="@dimen/spacing_large"
                        android:src="@drawable/cc_cyan" />

                    <ImageView
                        android:id="@+id/captions_bg_color_blue"
                        android:layout_width="@dimen/color_button_width"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingTop="@dimen/spacing_large"
                        android:src="@drawable/cc_blue" />
                </LinearLayout>

                <net.flixster.android.view.SubHeader
                    android:id="@+id/captions_text_opacity_header"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/caption_text_opacity_header" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_normal"
                    android:layout_marginRight="@dimen/spacing_normal"
                    android:layout_marginTop="@dimen/spacing_normal"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/captions_text_opacity_percentage"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginRight="@dimen/spacing_small"
                        android:layout_marginTop="3dp"
                        android:gravity="left"
                        android:text="100%"
                        android:textAppearance="@style/TextMedium" />

                    <SeekBar
                        android:id="@+id/captions_text_opacity_slider"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/captions_text_opacity_percentage" />
                </RelativeLayout>

                <net.flixster.android.view.SubHeader
                    android:id="@+id/captions_bg_opacity_header"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/caption_bg_opacity_header" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_normal"
                    android:layout_marginRight="@dimen/spacing_normal"
                    android:layout_marginTop="@dimen/spacing_normal"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/captions_bg_opacity_percentage"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginRight="@dimen/spacing_small"
                        android:layout_marginTop="3dp"
                        android:gravity="left"
                        android:text="100%"
                        android:textAppearance="@style/TextMedium" />

                    <SeekBar
                        android:id="@+id/captions_bg_opacity_slider"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/captions_bg_opacity_percentage" />
                </RelativeLayout>

                <net.flixster.android.view.SubHeader
                    android:id="@+id/captions_defaults_header"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/captions_restore_defaults"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_pressed_holo"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:padding="@dimen/spacing_normal"
                    android:text="@string/caption_button_defaults"
                    android:textAppearance="@style/TextMedium" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <ImageView
        android:id="@+id/captions_gray_out"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="#80404040"
        android:visibility="gone" />

</FrameLayout>