<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/landing_page_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/redeem_background_trim"
    android:orientation="horizontal" >

	<ImageView
		android:id="@+id/bg_stars"
		android:layout_width="wrap_content"
		android:layout_height="130dp"
		android:scaleType="fitCenter"
		android:layout_centerHorizontal="true"
		android:src="@drawable/splash_background_stars" />
    
    <LinearLayout
        android:id="@+id/redemption_left_padding"
        android:layout_width="0pt"
		android:layout_height="wrap_content"
		android:baselineAligned="false"
		android:layout_alignParentLeft="true"
		android:orientation="vertical"/>
    
    <LinearLayout
        android:id="@+id/redemption_right_padding"
        android:layout_width="0pt"
		android:layout_height="wrap_content"
		android:baselineAligned="false"
		android:layout_alignParentRight="true"
		android:orientation="vertical"/>
  
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/selections_layout"
        android:layout_alignParentTop="true"
	    android:gravity="center"
        android:orientation="vertical" >
        
		<ImageView
		    android:id="@+id/flixster_logo_big"
	        android:layout_width="wrap_content"
	        android:layout_height="150dp"
	        android:paddingTop="20dp"
	        android:paddingBottom="10dp"
	        android:scaleType="fitCenter"
	        android:layout_centerHorizontal="true"
	        android:src="@drawable/flixstervideo_logo" />
		
	</LinearLayout>
    		    
    <LinearLayout
        android:id="@+id/selections_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"  
		android:layout_above="@+id/landingpage_footers"
		android:paddingLeft="20dp"
		android:paddingRight="20dp"
		android:paddingBottom="10dp"
		android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="3"
			android:paddingLeft="4dp"
			android:paddingRight="4dp"
			android:paddingTop="10dp"
			android:paddingBottom="10dp"
			android:layout_gravity="center_horizontal" >
            	<Button 
					android:id="@+id/button_start"
					android:background="@drawable/flixster_blue_button"
					android:textColor="@color/white"
					android:paddingTop="10dp"
					android:paddingBottom="10dp"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textStyle="bold"
					android:textSize="@dimen/textMedium" 
					android:text="@string/redeem_redeemBtn"/>
        </LinearLayout>

	    <LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="3"
			android:paddingLeft="4dp"
			android:paddingRight="4dp"
			android:paddingTop="10dp"
			android:paddingBottom="10dp"
			android:layout_gravity="center_horizontal"
			android:orientation="horizontal" >
    		
    		<Button
				android:id="@+id/button_register"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="6"
				android:background="@drawable/flixster_drawer_button_white"
				android:textColor="@color/flixster_video_blue"
				android:clickable="true"
				android:focusable="true"
				android:scaleType="fitCenter"
				android:text="@string/label_reg"
				android:textStyle="bold"
				android:textSize="@dimen/textMedium" />

    		<LinearLayout
    		    android:layout_width="wrap_content"
    		    android:layout_height="wrap_content"
    		    android:layout_weight="0.6" />

	        <Button
				android:id="@+id/button_sign_in"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="6"
				android:background="@drawable/flixster_drawer_button_white"
				android:textColor="@color/flixster_video_blue"
				android:clickable="true"
				android:focusable="true"
				android:scaleType="fitCenter"
				android:text="Login"
				android:textStyle="bold"
				android:textSize="@dimen/textMedium" />
	        
    	</LinearLayout>
    	
  		<LinearLayout
   		    android:layout_width="match_parent"
   		    android:layout_height="wrap_content"
			android:paddingLeft="4dp"
			android:paddingRight="4dp"
			android:paddingTop="3dp"
			android:paddingBottom="3dp"
   		    android:gravity="center|center_vertical"
   		    android:orientation="horizontal" >

   		    <ImageView 
				android:layout_width="0dp"
				android:layout_weight="5"
				android:layout_height="2px"
				android:background="@drawable/table_header_divider" />
   		    
			<TextView
			    android:id="@+id/redeem_login_or"
				android:layout_width="0dp"
				android:layout_weight="2"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:text="or"
				android:textColor="@color/flixster_text_grey"
			    android:textSize="@dimen/textSmall"
			    android:background="@android:color/transparent" />

   		    <ImageView 
				android:layout_width="0dp"
				android:layout_weight="5"
				android:layout_height="2px"
				android:background="@drawable/table_header_divider" />
		
		</LinearLayout>
    		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="3"
			android:paddingLeft="4dp"
			android:paddingRight="4dp"
			android:paddingTop="10dp"
			android:paddingBottom="10dp"
			android:gravity="center"
			android:orientation="horizontal" >
			
    		<Button
				android:id="@+id/button_fb_login"
				android:layout_width="0dp"
				android:layout_weight="6"
				android:layout_height="wrap_content"
				android:background="@drawable/flixster_login_page_button"
				android:clickable="true"
				android:focusable="true"
				android:scaleType="fitCenter"
				android:text="@string/label_facebook"
				android:textColor="@color/flixster_login_page_button_text_color"
	    		android:drawableLeft="@drawable/fblogo"
				android:textStyle="bold"
				android:textSize="@dimen/textMedium" />
    		
    		<LinearLayout
    		    android:layout_width="wrap_content"
    		    android:layout_height="wrap_content"
    		    android:layout_weight="0.6" />
    		
    		<Button
				android:id="@+id/google_sign_in_button"
				android:layout_width="0dp"
				android:layout_weight="6"
				android:layout_height="wrap_content"
				android:background="@drawable/flixster_login_page_button"
				android:clickable="true"
				android:focusable="true"
				android:scaleType="fitCenter"
				android:text="@string/label_google"
				android:textColor="@color/flixster_login_page_button_text_color"
	    		android:drawableLeft="@drawable/icon_gplus_red"
				android:textStyle="bold"
				android:textSize="@dimen/textMedium" />
    		
   		</LinearLayout>

   		<!-- <Button
		    android:id="@+id/google_sign_out_button"
		    android:layout_width="wrap_content"
		    android:layout_height="14dp"
		    android:background="@android:color/transparent"
		    android:textSize="@dimen/textSmall" 
		    android:layout_gravity="right"
		    android:text="Google Sign Out" />-->
    </LinearLayout>
   	<LinearLayout 
		android:id="@+id/landingpage_footers"
		android:layout_alignParentBottom="true"
		android:background="#e8e8e8"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">	
		<net.flixster.android.view.widget.LinkEnabledTextView
			android:id="@+id/linked_legal_links"
			android:paddingTop="10dp"
			android:paddingLeft="20dp"
			android:paddingRight="20dp"
			android:gravity="center"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:clickable="true"
			android:focusable="true"
			android:layout_gravity="center_horizontal"
			android:textSize="@dimen/textSmall" />
   		
   		<TextView
		    android:id="@+id/version_number"
		    android:layout_width="match_parent"
		    android:layout_height="0dp"
		    android:focusable="true"
			android:layout_weight="1"
		    android:gravity="right|bottom"
		    android:text="v2.0"
		    android:textColor="@color/flixster_login_page_button_text_color"
		    android:textSize="@dimen/textSmall" />
    </LinearLayout>
</RelativeLayout>