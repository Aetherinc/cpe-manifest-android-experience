<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_inactive" >
  
    <LinearLayout
        android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:baselineAligned="false"
		android:gravity="center"
		android:orientation="vertical">
	
        <LinearLayout
	        android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:baselineAligned="false"
		    android:orientation="vertical"
		    android:paddingBottom="4pt"
		    android:paddingLeft="4pt"
		    android:paddingRight="4pt"
		    android:paddingTop="4pt" >

			<TextView
			    android:id="@+id/textView_redeem_text1"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:textSize="@dimen/textMedium"
				android:textStyle="bold"
			    android:textColor="@color/grey05"
			    android:text="@string/redeem_confirmSubHeader"/>

			<ProgressBar
				android:id="@+id/pb"
				style="@style/HoloLightProgressBarHorizontal"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:progress="60"
				android:visibility="gone" >
			</ProgressBar>
			
			<LinearLayout
		        android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingTop="10dp"
				android:paddingBottom="10dp"
				android:orientation="horizontal" >
						
				<ImageView
				    android:id="@+id/imageView_redeem_confirm_poster"
				    android:layout_width="103dp"
				    android:layout_height="154dp"
				    android:scaleType="fitXY"
					android:paddingRight="@dimen/spacing_normal"
				    android:paddingBottom="4dp"
				    android:background="@drawable/drop_shadow"
				    android:src="@drawable/poster_loading_small" />
				
				<LinearLayout
			        android:layout_width="0dp"
				    android:layout_weight="2"
				    android:paddingLeft="8dp"
				    android:paddingTop="4dp"
				    android:paddingBottom="40dp"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:baselineAligned="false">

				    <TextView
					    android:id="@+id/textView_title_name"
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
						android:paddingBottom="@dimen/spacing_small"
					    android:text="The Jerk"
					    android:textStyle="bold"
					    android:textSize="@dimen/textMedium"/>


					<TextView
					    android:id="@+id/textView_redeem_synopsis"
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
					    android:paddingBottom="20dp"
						android:maxLines="8"
					    android:textSize="@dimen/textSmall"
						android:ellipsize="end"
					    android:layout_gravity="left" />
				</LinearLayout>
			</LinearLayout>
			
		</LinearLayout>
		

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="40dp"
			android:paddingRight="40dp"
			android:paddingTop="4pt"
			android:paddingBottom="4pt"
			android:orientation="vertical" >

	        <Button 
				android:id="@+id/button_redeem_continue"
				android:background="@drawable/flixster_blue_button"
				android:textColor="@color/white"
				android:textStyle="bold"
				android:textSize="@dimen/textMedium"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Continue"/>

    	</LinearLayout>
    	
    </LinearLayout>
   
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:paddingLeft="4pt"
		android:paddingRight="4pt"
		android:paddingTop="2pt"
		android:paddingBottom="4pt"
		android:orientation="vertical" >

		<Button
		    android:id="@+id/textView_redeem_not_want_text"
		    android:layout_width="wrap_content"
		    android:layout_height="33dp"
		    android:background="@android:color/transparent"
		    android:clickable="true"
		    android:layout_gravity="center_horizontal"
		    android:text="Not what you want to redeem"
		    android:textColor="@color/flixster_text_blue"
		    android:textSize="@dimen/textSmall" />
		
   	</LinearLayout>

</RelativeLayout>