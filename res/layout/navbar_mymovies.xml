<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mymovies_nav_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_navbar"
    android:orientation="horizontal"
    android:weightSum="5">
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="5"
   		android:orientation="horizontal">
        
        <Button
            android:id="@+id/mymovies_nav_mymovies"
            style="@style/navbar_text"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@null"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="center"
            android:text="@string/all" />

        <View
            android:id="@+id/navbar_divider"
            android:layout_gravity="center"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="@color/gridviewgrey" />
        
        <Button
            android:id="@+id/mymovies_nav_friendsmovies"
            style="@style/navbar_text"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@null"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:gravity="center"
            android:text="@string/downloaded" />
        
        <LinearLayout
            android:layout_width="fill_parent"
        	android:layout_height="30dp"
        	android:gravity="right"
        	android:orientation="horizontal" >
        	
	        <ImageView
			    android:id="@+id/refresh_button"
			    android:layout_width="30dp"
			    android:layout_height="30dp"
			    android:src="@drawable/icon_refresh_selector"
			    android:scaleType="fitCenter"
			    android:contentDescription="Refresh" />
	        
	        <ProgressBar
			    android:id="@+id/refresh_spinner"
			    android:layout_width="30dp"
			    android:layout_height="30dp"
			    android:visibility="gone" />

	        
	    </LinearLayout>

    </LinearLayout>

</LinearLayout>