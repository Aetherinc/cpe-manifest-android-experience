<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <RelativeLayout 
	    android:id="@+id/language_selection_contents"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_alignParentTop="true"
	    android:paddingLeft="10pt"
	    android:paddingRight="10pt"
	    android:paddingTop="5pt"
	    android:paddingBottom="5pt">
	    <TextView 
	        android:id="@+id/language_selection_row_text_name"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:textAppearance="@style/AlertDialog.BodyText"
	        android:text="abcde"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"/>
	
	    <Button 
	        android:id="@+id/language_selection_row_checkbox_button"
	        android:layout_alignParentRight="true"
	        android:background="@drawable/language_check_button"
	        android:layout_width="10pt"
	        android:layout_height="10pt"/>
    </RelativeLayout>
    <LinearLayout 
        android:layout_below="@id/language_selection_contents"
        android:paddingLeft="5pt"
        android:paddingRight="5pt"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="1px"
        />
</RelativeLayout>
