<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/movielist_rl"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bgpanel_active_topdiv" >

    <ImageView
        android:id="@+id/moviePoster"
        android:layout_width="@dimen/movie_list_width"
        android:layout_height="@dimen/movie_list_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="false"
        android:layout_marginRight="8dp"
        android:layout_marginTop="@dimen/divider_height"
        android:scaleType="fitXY"
        android:src="@drawable/poster_loading_small" />

    <ImageView
        android:id="@+id/movielist_playbutton"
        android:layout_width="@dimen/movie_list_width"
        android:layout_height="@dimen/movie_list_height"
        android:layout_marginTop="@dimen/divider_height"
        android:scaleType="center"
        android:src="@drawable/icon_playbutton" />

    <LinearLayout
        android:id="@+id/movielist_details_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/moviePoster"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/movieTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingRight="@dimen/spacing_small"
            android:singleLine="true"
            android:text="(Movie Title)"
            android:textAppearance="@style/TextNormalBold" />

        <LinearLayout
            android:id="@+id/movieScoreFlixLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/movieFlixScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:drawableLeft="@drawable/icon_popcorn_sm"
                android:drawablePadding="5dp"
                android:includeFontPadding="false"
                android:text="(score)"
                android:textAppearance="@style/TextSmaller" />

            <TextView
                android:id="@+id/friendFlixScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:includeFontPadding="false"
                android:text="(friend score)"
                android:textAppearance="@style/TextSmaller"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/movieScoreRtLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/movieRtScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:drawableLeft="@drawable/icon_fresh_sm"
                android:drawablePadding="5dp"
                android:includeFontPadding="false"
                android:text="(score)"
                android:textAppearance="@style/TextSmaller" />

            <TextView
                android:id="@+id/friendRtScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:includeFontPadding="false"
                android:text="(friend score)"
                android:textAppearance="@style/TextSmaller"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/movieActors"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:paddingRight="@dimen/spacing_small"
            android:singleLine="true"
            android:text="(Xactorsg)"
            android:textAppearance="@style/TextSmaller" />

        <TextView
            android:id="@+id/movieMeta"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="(Meta)"
            android:textAppearance="@style/TextSmaller" />

        <TextView
            android:id="@+id/movieRelease"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="(Release)"
            android:textAppearance="@style/TextSmaller" />

        <TextView
            android:id="@+id/movieDownloadStatus"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="(Download Status)"
            android:textAppearance="@style/TextSmaller"
            android:textColor="@color/subtitle_grey" />
    </LinearLayout>

</RelativeLayout>