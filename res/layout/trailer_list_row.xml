<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
	<LinearLayout
    	android:background="@color/whitegray"
    	android:paddingLeft="@dimen/spacing_normal"
    	android:paddingRight="@dimen/spacing_normal"
        android:id="@+id/trailer_row_contents"
		android:paddingTop="10dp"
		android:paddingBottom="10dp"
	    android:layout_alignParentTop="true"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	    <LinearLayout 
		    android:id="@+id/trailer_row_content"
	        android:layout_width="0dp"
	    	android:layout_height="wrap_content"
		    android:layout_weight="8">
		    <ImageButton 
		        android:id="@+id/trailer_row_watch_button"
		        android:src="@drawable/episode_row_play_button_graphic"
		        android:scaleType="fitCenter"
		        android:background="@android:color/transparent"
		        android:layout_weight="1"
		        android:focusable="false"
		        android:layout_height="match_parent"
		        android:layout_width="0dp"/>
		    
		    <TextView 
				android:paddingTop="5dp"
				android:paddingBottom="5dp"
		        android:id="@+id/trailer_row_text_name"
		        android:layout_weight="5"
		        android:gravity="center_vertical"
		        android:textColor="@android:color/black"
		        android:textSize="@dimen/textMedium"
		        android:lines="1"
            	android:ellipsize="end"
		        android:text="Name of Episode"
		        android:layout_height="match_parent"
		        android:layout_width="0dp"/>
		    
			
	    </LinearLayout>
	   
	    <RelativeLayout 
		    android:layout_width="30dp"
		    android:layout_height="match_parent"
		    android:orientation="horizontal">
			
			<ImageView 
			    android:layout_centerInParent="true"
			    android:layout_width="@dimen/collection_item_icon_width"
			    android:layout_height="@dimen/collection_item_icon_width"
			    android:visibility="visible"/>
		</RelativeLayout>
	    <RelativeLayout 
	        android:paddingLeft="5dp"
	        android:paddingRight="5dp"
		    android:layout_weight="1"
	        android:layout_width="0dp"
	        android:layout_height="match_parent">
		    <ImageView 
		        android:layout_alignParentRight="true"
		        android:layout_centerVertical="true"
       		    android:layout_width="14dp"
       		    android:layout_height="14dp"
       		    android:layout_gravity="center_vertical"
       		    android:scaleType="fitCenter"
       		    android:adjustViewBounds="true"/>
		   
	    </RelativeLayout>
	</LinearLayout>
    <LinearLayout 
        android:layout_below="@id/trailer_row_contents"
    	android:layout_marginLeft="@dimen/spacing_normal"
    	android:layout_marginRight="@dimen/spacing_normal"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="1px"
        />
</RelativeLayout>
