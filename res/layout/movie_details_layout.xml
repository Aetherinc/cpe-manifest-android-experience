<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

	<ScrollView
		android:id="@+id/ScrollViewBody"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent" >

		<RelativeLayout
			android:id="@+id/RelativeLayoutMovieDetails"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="@dimen/spacing_normal" >


			<TextView
				android:id="@+id/moviedetails_moviename"
				style="@style/episode_detail_header_text"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/spacing_normal"
				android:text="Some Movie" />
			<include layout="@layout/metadata_panel"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_below="@id/moviedetails_moviename"
				android:id="@+id/moviedetails_metadata_bar"/>
			<LinearLayout
				android:id="@+id/movieDetails"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
			    android:layout_below="@id/moviedetails_metadata_bar"
				android:layout_marginBottom="@dimen/iconpanel_padding_left"
				android:layout_marginTop="5dp"
				android:orientation="horizontal" >
			        
				<RelativeLayout
					android:layout_width="@dimen/movie_pro_width"
					android:layout_height="@dimen/movie_pro_height" >
				    
					<ImageView
					    android:id="@+id/moviedetails_poster"
					android:layout_width="@dimen/movie_pro_width"
					android:layout_height="@dimen/movie_pro_height"
					    android:scaleType="fitXY"
					    android:paddingRight="4dp"
					    android:paddingBottom="4dp"
					    android:background="@drawable/drop_shadow"
					    android:src="@drawable/poster_loading_small" />
				
					<ImageView
		                   android:id="@+id/play_trailer_button"
		                   android:layout_width="50dp"
		                   android:layout_height="wrap_content"
		                   android:layout_centerInParent="true"
		                   android:src="@drawable/ic_media_play_flat_large"
		                   android:clickable="true" />
				
				</RelativeLayout>   
			
				<LinearLayout 
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:paddingLeft="@dimen/spacing_normal"
				    android:orientation="vertical">
					<TextView
				        android:id="@+id/watch_now_panel"
				        android:layout_width="wrap_content"
				        android:layout_height="@dimen/tds_watch_height"
				        android:minWidth="@dimen/tds_watch_width"
				    	android:background="@drawable/watchnow_background"
				        android:clickable="true"
				        android:drawableLeft="@drawable/icon_play"
				        android:focusable="true"
				        android:drawablePadding="@dimen/iconpanel_padding"
				        android:gravity="center"
				        android:padding="@dimen/iconpanel_padding"
				        android:text="@string/watch_now"
				        android:textAppearance="@style/TextSmallBold"
				        android:textColor="@color/tds_watch_btn_text_color"
				        android:visibility="visible" />
					<LinearLayout 
						android:layout_width="fill_parent"
						android:layout_height="10dp"
					    />	
					<include layout="@layout/download_panel" 
						android:id="@+id/md_download_panel"
						android:layout_width="wrap_content"
						android:layout_height="@dimen/tds_watch_height"
						android:clickable="true"
						android:focusable="true"
						android:visibility="visible" />
					<LinearLayout 
						android:layout_width="fill_parent"
						android:layout_height="10dp"
					    />
					<TextView
						android:id="@+id/next_gen_panel"
						android:layout_width="wrap_content"
						android:layout_height="@dimen/tds_watch_height"
						android:minWidth="@dimen/tds_watch_width"
						android:background="@android:color/holo_red_dark"
						android:clickable="true"
						android:drawableLeft="@drawable/icon_play"
						android:focusable="true"
						android:drawablePadding="@dimen/iconpanel_padding"
						android:gravity="center"
						android:padding="@dimen/iconpanel_padding"
						android:text="Next Gen"
						android:textAppearance="@style/TextSmallBold"
						android:textColor="@color/tds_watch_btn_text_color"
						android:visibility="gone" />
					
			    </LinearLayout>		
			</LinearLayout>

			<LinearLayout
				android:id="@+id/SubCapLinearLayout"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_below="@id/movieDetails"
				android:orientation="vertical" >

			    <LinearLayout
			        android:id="@+id/audio_subtitle_select_panel"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:background="@drawable/bgpanel_active_topdiv"
			        android:gravity="center_vertical"
			        android:clickable="true"
			        android:orientation="horizontal"
			        android:visibility="visible" >
			        
			        <TextView
			            android:id="@+id/audio_subtitle_label"
			            android:layout_width="0dp"
			            android:layout_weight="1"
			            android:layout_height="wrap_content"
			            android:paddingTop="@dimen/spacing_normal"
			            android:paddingBottom="@dimen/spacing_normal"
			            android:text="@string/audio_subtitle"
			            android:textAppearance="@style/TextSmallBold" />

			        <LinearLayout
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:gravity="right" >
			       		<TextView
			       		    android:id="@+id/audio_subtitle_value"
			       		    android:layout_width="wrap_content"
			       		    android:layout_height="wrap_content"
			       		    android:paddingRight="@dimen/spacing_small"
			       		    android:textAppearance="@style/TextSmall"
			       		    android:textColor="@color/grey05"
			       		    android:text=""/>
			       		<ImageView
			       		    android:layout_width="14dp"
			       		    android:layout_height="14dp"
			       		    android:layout_gravity="center_vertical"
			       		    android:scaleType="fitCenter"
			       		    android:src="@drawable/icon_arrow_right"
			       		    android:adjustViewBounds="true" />
		       		</LinearLayout>
			        
			    </LinearLayout>
				<TableLayout
			        android:id="@+id/trailer_ec_table"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:shrinkColumns="*"
			        android:stretchColumns="*" >
			    </TableLayout>
			    
			    <include 
				    android:id="@+id/rating_panel"
				    layout="@layout/rating_layout"/>
				<TextView
					android:id="@+id/num_of_downloads"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:padding="5dp"
					android:textColor="@color/grey05"
					android:textAppearance="@style/TextSmall"
					android:visibility="gone"/>

				<LinearLayout
					android:id="@+id/md_ll_moviedetails"
			        android:layout_marginTop="@dimen/spacing_normal"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">

					<include
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:layout_marginBottom="10dp"
					    android:layout_marginRight="10dp"
					    layout="@layout/movie_details_descriptions" />

					<TextView
						android:id="@+id/moviedetails_synopsis"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:autoLink="all"
						android:text="Synopsis"
						android:textAppearance="@style/TextSmall" />

					<LinearLayout
						android:id="@+id/moviePhotos"
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:orientation="horizontal"
						android:paddingRight="5dp" >
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>
		</RelativeLayout>
	</ScrollView>

</LinearLayout>