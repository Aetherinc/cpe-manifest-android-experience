<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:nextgen="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/next_gen_startup_layout"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="left"
        android:weightSum="2">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="3">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">
                <!--<ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    android:id="@+id/next_gen_startup_movie_logo"
                    android:layout_above="@+id/next_gen_startup_play_button"/>-->
                <com.wb.nextgen.widget.SelectedMaskImageButton
                    android:id="@+id/next_gen_startup_play_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:layout_centerInParent="true"
                    nextgen:selectedOverlayColor="@color/transparent_black"
                    android:background="@android:color/transparent" />
                <com.wb.nextgen.widget.SelectedMaskImageButton
                    android:id="@+id/next_gen_startup_extra_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/next_gen_startup_play_button"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"
                    nextgen:selectedOverlayColor="@color/transparent_black"
                    android:background="@android:color/transparent"/>

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>