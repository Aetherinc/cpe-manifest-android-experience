<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:id="@+id/next_gen_ime_bottom_view">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/next_gen_ime_main_frame">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">
        <fragment android:name="com.wb.nextgen.fragment.NextGenIMEActorFragment"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/ime_actor_fragment" />
       <fragment
            android:id="@+id/ime_grid_fragment"
            android:name="com.wb.nextgen.fragment.IMEElementsGridFragment"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"/>

    </LinearLayout>
</RelativeLayout>


</RelativeLayout>