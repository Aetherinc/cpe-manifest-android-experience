<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tonicartos.widget.stickygridheaders.StickyGridHeadersGridView
        android:id="@+id/next_gen_ec_list"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_gravity="center"
        android:stretchMode="columnWidth" >
    </com.tonicartos.widget.stickygridheaders.StickyGridHeadersGridView>
    <LinearLayout
        android:id="@+id/next_gen_ec_content_view"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_weight="3"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:background="@color/black">

            <net.flixster.android.drm.ObservableVideoView
                android:id="@+id/surface_view"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true" />

            <com.flixster.android.captioning.CaptionView
                android:id="@+id/caption1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:text="Caption1"
                android:textColor="@color/white"
                android:visibility="gone" />

            <com.flixster.android.captioning.CaptionView
                android:id="@+id/caption2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:text="Caption2"
                android:textColor="@color/white"
                android:visibility="gone" />

            <com.flixster.android.captioning.CaptionView
                android:id="@+id/caption3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:text="Caption3"
                android:textColor="@color/white"
                android:visibility="gone" />

            <com.flixster.android.captioning.CaptionView
                android:id="@+id/caption4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:text="Caption4"
                android:textColor="@color/white"
                android:visibility="gone" />

        </RelativeLayout>

        <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp"></LinearLayout>
    </LinearLayout>
</LinearLayout>