<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

	<ScrollView
		android:id="@+id/ScrollViewBody"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent" >

		<RelativeLayout
			android:id="@+id/RelativeLayoutMovieDetails"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="@dimen/spacing_normal" >

			<TextView
				android:id="@+id/moviedetails_moviename"
				style="@style/episode_detail_header_text"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/spacing_normal"
				android:text="Some Movie" />
			
			<include layout="@layout/offer_metadata_panel"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_below="@id/moviedetails_moviename"
				android:id="@+id/moviedetails_metadata_bar"/>

			<LinearLayout
				android:id="@+id/movieDetails"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_below="@id/moviedetails_metadata_bar"
				android:layout_marginBottom="@dimen/iconpanel_padding_left"
				android:layout_marginTop="5dp"
				android:orientation="horizontal" >
			   	<RelativeLayout
					android:layout_width="@dimen/movie_pro_width"
					android:layout_height="@dimen/movie_pro_height" >
				    
					<ImageView
					    android:id="@+id/moviedetails_poster"
					android:layout_width="@dimen/movie_pro_width"
					android:layout_height="@dimen/movie_pro_height"
					    android:scaleType="fitXY"
					    android:paddingRight="4dp"
					    android:paddingBottom="4dp"
					    android:background="@drawable/drop_shadow"
					    android:src="@drawable/poster_loading_small" />
				
					<ImageView
		                   android:id="@+id/play_trailer_button"
		                   android:layout_width="50dp"
		                   android:layout_height="wrap_content"
		                   android:layout_centerInParent="true"
		                   android:src="@drawable/ic_media_play_flat_large"
		                   android:clickable="true" />
				
				</RelativeLayout>   
			
				<LinearLayout 
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
					android:padding="@dimen/iconpanel_padding"
				    android:orientation="vertical">
					
					<include 
					    android:id="@+id/rating_panel"
					    layout="@layout/rating_layout"/>
					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="@dimen/spacing_normal"
					    android:paddingBottom="@dimen/iconpanel_padding"
						android:orientation="vertical">
						<TextView
					        android:id="@+id/offer_detail_redeem_button"
					        android:layout_width="wrap_content"
					        android:layout_height="@dimen/tds_watch_height"
					        android:minWidth="@dimen/tds_watch_width"
					    	android:background="@drawable/flixster_blue_button"
					        android:clickable="true"
					        android:focusable="true"
					        android:paddingTop="@dimen/iconpanel_padding"
					        android:gravity="center"
					        android:padding="@dimen/iconpanel_padding"
					        android:text="@string/redeem_continueBtn"
					        android:textAppearance="@style/TextSmallBold"
					        android:textColor="@color/tds_watch_btn_text_color"
					        android:visibility="visible" />
						
					</LinearLayout>
			    </LinearLayout>		
			</LinearLayout>

			<LinearLayout
				android:id="@+id/SubCapLinearLayout"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_below="@id/movieDetails"
				android:orientation="vertical" >

				<LinearLayout
					android:id="@+id/md_ll_moviedetails"
			        android:layout_marginTop="@dimen/spacing_normal"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">

					<LinearLayout
						android:id="@+id/moviedetails_detailslist"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical" >
											
						<TextView
							android:id="@+id/moviedetails_genres"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/genres"
							android:textAppearance="@style/TextSmall"
							android:visibility="visible" />
					
						<TextView
							android:id="@+id/moviedetails_director"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/director"
							android:textAppearance="@style/TextSmall"
							android:visibility="visible" />
						<TextView
							android:id="@+id/moviedetails_writer"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/writen"
							android:textAppearance="@style/TextSmall"
							android:visibility="visible" />

						<TextView
							android:id="@+id/moviedetails_cast"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Cast: Ben Affleck, George Clooney, Sandra Bullock"
							android:textAppearance="@style/TextSmall"
							android:visibility="visible" />

					</LinearLayout>

					<RelativeLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content">
						<TextView
							android:id="@+id/moviedetails_synopsis"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:autoLink="all"
							android:text="Synopsis"
							android:textAppearance="@style/TextSmall" />
						<TextView
							android:id="@+id/moviedetails_synopsis_more"
							android:layout_below="@id/moviedetails_synopsis"
							android:layout_alignParentRight="true"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:singleLine="true"
							android:textColor="@android:color/holo_blue_dark"
							android:textAppearance="@style/TextSmall"
							android:visibility="gone"/>
					</RelativeLayout>
					<LinearLayout
						android:id="@+id/moviePhotos"
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:orientation="horizontal"
						android:paddingRight="5dp" >
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>
		</RelativeLayout>
	</ScrollView>

</LinearLayout>