<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fv_web_bg_non_stretch">

    <TextView 
        android:id="@+id/forgot_password_header"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
        android:textSize="@dimen/textMedium"
        android:textStyle="bold"
        android:layout_margin="@dimen/spacing_normal"
	    android:text="Forgot Password"
	    android:layout_centerHorizontal="true"
        />
    <RelativeLayout 
        android:layout_below="@id/forgot_password_header"
        android:layout_margin="@dimen/spacing_normal"
        android:background="@drawable/forgot_password_frame_bg"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
        >
        <TextView 
	        android:id="@+id/forgot_password_text_1"
        	android:layout_margin="@dimen/spacing_normal"
            android:textSize="@dimen/textMSmall"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text="Enter your email address and Flixster will email you a link to reset your password."/>
        <TextView 
        	android:layout_below="@id/forgot_password_text_1"
	        android:id="@+id/forgot_password_email_text"
        	android:layout_margin="@dimen/spacing_normal"
            android:textSize="@dimen/textMSmall"
        	android:textStyle="bold"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text="Email Address"/>
        <EditText 
        	android:layout_below="@id/forgot_password_email_text"
	        android:id="@+id/forgot_password_email_addr"
        	android:background="@drawable/forgot_password_edittext_bg"
        	android:layout_margin="@dimen/spacing_normal"
            android:textSize="@dimen/textMSmall"
		    android:layout_width="match_parent"
		    android:inputType="textEmailAddress"
		    android:singleLine="true"
		    android:layout_height="wrap_content"
		    android:text=""/>
        <TextView 
        	android:layout_below="@id/forgot_password_email_addr"
	        android:id="@+id/forgot_password_text_2"
        	android:layout_margin="@dimen/spacing_normal"
            android:textSize="@dimen/textMSmall"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text="Please add Flixster.com to your email's safe domains list or check your spam folder if you do not receive your credential recovery email."/>
        <Button
        	android:layout_below="@id/forgot_password_text_2"
            android:id="@+id/forgot_password_submit_btn"
        	android:layout_margin="@dimen/spacing_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/flixster_blue_button"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitCenter"
            android:text="Recover Password"
            android:textColor="@color/white"
            android:textSize="@dimen/textMedium" />
    </RelativeLayout>
</RelativeLayout>